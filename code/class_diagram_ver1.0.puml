' ===== GridNode (abstract) & Subclasses =====

abstract class GridNode {
  ' ===== Attributes =====
  # x : Integer
  # y : Integer
  # maxDistance : Integer 
  ' {distance limit to connect to child level}
  # initialCost : Real
  # maintenanceCost : Real
  # powerDemand : Real
  ' ===== Operations =====
  + distanceTo()
  ' (childNode : GridNode) : Integer
  + withinDistance()
  ' (childNode : GridNode) : Boolean
  + reportIssue()
  ' (description : String) : EquipmentIssue
  + {abstract} addChild() 
  ' (childId: String) : void'
  + {abstract} removeChild() 
  ' (childId: String) : void
  + {abstract} checkCapacity()
  ' : Boolean
  + {abstract} supply() 
  ' (demands: Real) : void
  + {abstract} transferUpstream(newUpstream: GridNode) 
  ' : void
}

note right of GridNode::transferUpstream
  <b>context</b> transferUpstream(newUpstream)
  <b>pre:</b> newUpstream <> self.upstream
  <b>post:</b> self.upstream = newUpstream
end note

