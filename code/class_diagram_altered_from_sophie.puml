class Transaction {
  - transactionId : String
  - billId : String
  - paymentDate : Date
  - amountPaid : Real
  - paymentMethod : String
  + recordPayment()
  ' : void
}

' ===== GridNode (abstract) & Subclasses =====

abstract class GridNode {
  # id : Integer
  # x : Integer
  # y : Integer
  # maxDistance : Integer
  # parentId : Integer
  # childNodeIds : List<String>
  # powerDemand : Real
  # buildCost : Real
  # maintenanceCost : Real
  # currentDemand: Real
  + {abstract} getDemands()
  ' : Real
  + {abstract} supply()
  ' (demands: Real) : void
  + {abstract} getCost()
  ' : Real
  + {abstract} withinDistance()
  ' (other : GridNode) : Boolean
  + distanceTo()
  ' (other : GridNode) : Integer
  + reportIssue()
  ' (description : String) : EquipmentIssue
}

class PowerPlant {
  - powerMade : Real
  + getDemands()
  ' : Real
  + checkCapacity()
  ' : Boolean
  + addSubstation()
  ' (substation : Substation) : void
  + removeSubstation()
  ' (substationId : Integer) : void
}

class Substation {
  + getDemands()
  ' : Real
  + addTransformer()
  ' (transformer : Transformer) : void
  + removeTransformer()
  ' (transformerId : Integer) : void
}

class Transformer {
  + getDemands()
  ' : Real
  + addCustomer()
  ' (customer : Customer) : void
  + removeCustomer()
  ' (accountNumber : String) : void
}

' ===== Customer (separate, not inheriting GridNode) =====

class Customer {
  - accountNumber : String
  - name : String
  - type : String
  - powerDemand : Real
  - powerUsedKWh : Real
  - x : Integer
  - y : Integer
  - maxDistance : Integer
  + distanceFrom()
  ' (other : GridNode) : Integer
  + recordUsage()
  ' (kWh : Real) : void
  + payBill()
  ' (billId : String, amount : Real) : void
  + getBill()
  ' (accountNumber: String) : Bill
}

' ===== Employee & EquipmentIssue =====

class Employee {
  - employeeId : String
  - name : String
  - startDate : Date
  - hourlyWage : Real
  - assignedIssueId: String
}

class EquipmentIssue {
  - issueId : String
  - description : String
  - reportDate : Date
  - hoursRequired : Integer
  - materialCost : Real
  - isResolved : Boolean
  + getTotalCosts()
  ' () : Real
}


' ===== RELATIONSHIPS =====

' PowerCompany relationships
PowerCompany "1" o-right- "0..*" PowerPlant : owns
PowerCompany "1" -left-> "0..*" Customer : serves
PowerCompany "1" --> "0..*" Employee : employs
PowerCompany "1" --> "0..*" EquipmentIssue : tracks
PowerCompany "1" --> "0..*" Bill : generates

' Bill and Transaction relationships
Bill "1" --> "1" Customer : generated to
Customer "1" --> "1" Bill : receives
Bill "1" --> "0..*" Transaction : paid by
Transaction "1" --> "1" Bill : pays for
Customer "1" --> "0..*" Transaction : makes

' Power chain
PowerPlant "1" o-down- "0..20" Substation : supplies to
Substation "1" o-down- "0..10" Transformer : supplies to
Transformer "1" -down-> "0..5" Customer : supplies to

' Employee & EquipmentIssue
Employee "0..*" --> "1" EquipmentIssue : assigned to
EquipmentIssue "1" --> "1" GridNode : reported from

' GridNode inheritance
PowerPlant -right-|> GridNode
Substation -right-|> GridNode
Transformer -right-|> GridNode

@enduml