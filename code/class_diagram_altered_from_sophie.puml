' ===== CLASSES =====

class PowerCompany {
  - longName : String
  - shortName : String
  - standardRate : Real
  - totalCosts : Real
  - totalRevenue : Real
  - currentBillingCycle : Integer
  - billingStartDate : Date
  - billingEndDate : Date
  + processBillingCycle()
  ' : void
  + createBills()
  ' : void
  + getTotalRevenue()
  ' : Real
  + getTotalCosts()
  ' : Real
  + createEquipmentIssue()
  ' (issue : EquipmentIssue) : void
  + assignIssue()
  ' (issueId: string, employeeId: string): void
  + getTotalCosts()
  ' : Real
  + getTotalRevenue()
  ' : Real
  + getTotalDemand()
  ' : Real
}

class Bill {
  - billId : String
  - accountNumber : String
  - billingCycle : Integer
  - issueDate : Date
  - dueDate : Date
  - usageKWh : Real
  - standardRate : Real
  - amountDue : Real
  - amountPaid : Real
  - status : String
