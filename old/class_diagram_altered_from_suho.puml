' ===== CLASSES =====

class PowerCompany {
  - longName : String
  - shortName : String
  - standardRate : Real
  - totalCosts : Real
  - totalRevenue : Real
   + processBillingCycle()
   ' : Real
   + logEquipmentIssue()
   ' (issue : EquipmentIssue) : void
   + getTotalCosts()
   ' : Real
   + getTotalRevenue()
   ' : Real
}

class BillingDepartment {
  - billCycle : String
  - startDate : Date
  - endDate : Date
   - getCustomerBill()
   ' : Real
   - getMaintenanceCost()
   ' : Real
   - tallyRepairCosts()
   ' : Real
   - calculateTotalCost()
   ' : Real
   + processBillingCycle()
   ' : Real
   + getRevenue()
   ' : Real
}

' ===== GridNode (abstract) & Subclasses =====

abstract class GridNode {
  # id : Integer
  # x : Integer
  # y : Integer
  # maxDistance : Integer
  # parentID : Integer
  # childNodeCount : Integer
   + {abstract} getCost()
   ' : Real
   + {abstract} withinDistance()
   ' (other : GridNode) : Boolean
   + distanceTo()
   ' (other : GridNode) : Integer
}

class PowerPlant {
  - buildCost : Real
  - costPerKWh : Real
  - powerMadeKWh : Real
   + addSubstation()
   ' (substation : Substation) : void
   + removeSubstation()
   ' (substationId : Integer) : void
}

class Substation {
  - buildCost : Real
  - maintenanceCost : Real
   + addTransformer()
   ' (transformer : Transformer) : void
   + removeTransformer()
   ' (transformerId : Integer) : void
}

class Transformer {
  - buildCost : Real
  - maintenanceCost : Real
   + addCustomer()
   ' (customer : Customer) : void
   + removeCustomer()
   ' (accountNumber : String) : void
}

' ===== Customer (separate, not inheriting GridNode) =====

class Customer {
  - accountNumber : String
  - name : String
  - isResidential : Boolean
  - costPerKWh : Real
  - powerUsedKWh : Real
  - x : Integer
  - y : Integer
  - maxDistance : Integer
   + distanceFrom()
   ' (other : GridNode) : Integer
   + calculateBill()
   ' : Real
}

' ===== Employee & EquipmentIssue =====

class Employee {
  - employeeId : String
  - name : String
  - startDate : Date
  - hourlyWage : Real
   + assignToIssue()
   ' (issue : EquipmentIssue) : void
}

class EquipmentIssue {
  - hoursRequired : Integer
  - materialCost : Real
   + calculateRepairCost()
   ' (wage : Real) : Real
}


' ===== RELATIONSHIPS =====

' PowerCompany relationships
PowerCompany "1" *-right- "0..*" PowerPlant : owns
PowerCompany "1" -left-> "0..*" Customer : serves
PowerCompany "1" --> "0..*" Employee : employs
PowerCompany "1" --> "0..*" EquipmentIssue : issues
PowerCompany "1" *-- "1" BillingDepartment : composed of

' Power chain (composition)
PowerPlant "1" *-down- "0..20" Substation : supplies to
Substation "1" *-down- "0..10" Transformer : supplies to
Transformer "1" -down-> "0..5" Customer : supplies to

' Employee & EquipmentIssue
Employee "0..*" --> "1" EquipmentIssue : assigned to
EquipmentIssue "1" ..> "1" GridNode : assigned to

' GridNode inheritance
PowerPlant -right-|> GridNode
Substation -right-|> GridNode
Transformer -right-|> GridNode

' BillingDepartment associations (all classes)
BillingDepartment "1" --> "0..*" Customer : charges to
BillingDepartment "1" --> "0..*" GridNode : costs from
BillingDepartment "1" -right-> "0..*" EquipmentIssue : costs from


@enduml
